<div id="container">
 <div class="row">
  <div class="large- large-12 columns">

<div><h3><%= link_to "Add new item", new_item_path %></h3></div>
    
<div class="show">
    <h3>Current Items for Sale!</h3>       
    <div class="table-responsive">
    <table class="table table-hover">
        <tr class="info">
              <th>Name </th>
              <th>Status</th>
              <th>Asking</th>
              <th>Notify</th>
              <th>Listing_On</th>
              <th>Expiration_On</th>
        </tr>

      <% @items.each do |i| %>

        <tr class="active">
            <td><%= i.item_name %></td>
            <td><%= i.item_status %></td>
            <td>$<%= i.asking_price %></td>
            <td>$<%= i.notify_price %></td>
            <td><%= i.listing_date %></td>
            <td><%= i.expiration_date %></td>
            <td><%= link_to "Details", item_path(i) %></td>
            <!-- <td><%= link_to "Edit", edit_item_path(i) %>     </td>      
            <td><%= link_to "Delete", i, method: :delete, data: { confirm: 'Are you sure?' } %> --></td>
        </tr>
   
 <% end %>
   </table>
   </div>

    </div>
</div>
</div>
</div>
