<div class="large-4 columns">
<h2>Sign Up!</h2>

<%= form_for @user do |f| %>
     <%= f.label :name %>
     <%= f.text_field :name , autofocus:true %>

     <%= f.label :email %>
     <%= f.text_field :email %>

     <%= f.label :email_confirmation %>
     <%= f.text_field :email_confirmation %>

     <%= f.label :password %>
     <%= f.password_field :password %>

     <%= f.label :password_confirmation %><%= @user.erroes.messages[:password].join(", ") %>
     <%= f.password_field :password_confirmation , class: 'form-control' %>

    <%= f.label : upload your picture %>
    <%= f.file_field :avatar %>

     <%= f.submit "Sign Me Up!" %>
     <%= link_to "Log in!", sessions_path %>

<% end %>
    <%= link_to "Back to users list!", users_path %>
    </div>
