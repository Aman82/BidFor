<div class="large-4 columns">
<h2>Vehicle Detail Form!</h2>

<%= form_for @car do |c| %>

     <%= c.label :make %><br>
     <%= c.text_field :make, class: 'form-control', autofocus:true  %><br>

     <%= c.label :model %><br>
     <%= c.text_field :model %><br>

     <%= c.label :year %><br>
     <%= c.text_field :year %><br>

     <%= c.label :trim %><br>
     <%= c.text_field :trim %><br>

     <%= c.label :mileage %><br>
     <%= c.text_field :mileage %><br>

     <%= c.label :transmission %><br>
     <%= c.text_field :transmission %><br>

     <%= c.label :color %><br>
     <%= c.text_field :color %><br>

     <%= c.label :title %><br>
     <%= c.text_field :title %><br>

     <%= c.label :avatar %><br>
     <%= c.file_field :avatar %><br>
  
     <%= c.submit "Add info!" %><br>

<% end %>

    <%= link_to "Back to the list!", cars_path %>
    </div>
    <div class="large-4 columns">.</div>